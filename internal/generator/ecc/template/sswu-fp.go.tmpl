// sqrtRatio computes the square root of u/v and returns true if u/v was indeed a quadratic residue
// if not, we get sqrt(Z * u / v). Recall that Z is non-residue
// Taken from https://datatracker.ietf.org/doc/draft-irtf-cfrg-hash-to-curve/13/ F.2.1.2. q = 3 mod 4
// The main idea is that since the computation of the square root involves taking large powers of u/v, the inversion of v can be avoided
func sqrtRatio(z *{{.CoordType}}, u *{{.CoordType}}, v *{{.CoordType}}) bool {
	var tv1 {{.CoordType}}
	tv1.Square(v)
	var tv2 {{.CoordType}}
	tv2.Mul(u, v)
	tv1.Mul(&tv1, &tv2)

	var y1 {{.CoordType}}
	{
	var c1 big.Int
	// c1 = {{ index .SqrtRatioParams 0 }}
	c1.SetBytes([]byte { {{ printList (bytes (index .SqrtRatioParams 0) ) }} })
	y1.Exp(tv1, &c1)
	}

	y1.Mul(&y1, &tv2)

	var y2 {{.CoordType}}
	y2.Mul(&y1, &{{.CoordType}}{ {{ words64 (index .SqrtRatioParams 1) }} })

	var tv3 {{.CoordType}}
	tv3.Square(&y1)
	tv3.Mul(&tv3, v)
	isQr := tv3 == *u

	if isQr {
		*z = y1
	} else {
		*z = y2
	}

	return isQr
}

